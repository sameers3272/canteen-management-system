<%- include('../include/head.ejs') %>
  </head>

  <body>
    <%  if(loggedIn){ %>
   
      <div class="flash">
        <div class="flash__icon">
          <i class="icon mdi mdi-check-circle-outline"></i>
        </div>
        <p class="flash__body">
         <%= loggedIn %>
        </p>
      </div>
    
      <% } %>
    <div class="container-scroller">

      <%- include('../include/header.ejs');%>

    
        <div class="container-fluid page-body-wrapper">

          <%- include('../include/side-bar.ejs'); %>
        
            <!-- main -->
            <div class="main-panel">
              <div class="content-wrapper">
                <div class="row">
                 
                  <div class="tab-content tab-content-basic">
                    <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview">
                      <div class="row">
                        <div class="col-lg-12 grid-margin stretch-card">
                          <div class="card">
                            <div class="card-body">

                              <% if(foods.length> 0){ %>
                                <div class="table-responsive">
                                  <table class="table  text-center">
                                    <thead>
                                      <tr>
                                        <th>
                                          Title
                                        </th>
                                        <th>
                                          Image
                                        </th>
                                        <th>
                                          Price
                                        </th>
                                        <th>
                                          Description
                                        </th>
                                        <th>

                                        </th>
                                      </tr>
                                    </thead>
                                    <tbody style="background-color: #F4F5F7;">

                                      <% foods.forEach(food=>{%>
                                        <tr>
                                          <td class="py-1">
                                            <%= food.title %>
                                          </td>
                                          <td>
                                            <img src="/<%=food.image%>" style="width: 100px;height: 100px;"
                                              alt="<%=food.title %>" srcset="">
                                          </td>
                                          <td>
                                            <%= food.price %>
                                          </td>
                                          <td>
                                            <%= food.description %>
                                          </td>
                                          <td>
                                            <form action="/add-to-cart/<%=food._id %>" method="post">
                                              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

                                              <button type="submit" class="btn btn-warning">
                                                <div class="d-flex align-items-center">
                                                  <i class="mdi mdi-cart-outline menu-icon"></i> <span> Add To
                                                    Cart</span>
                                                </div>
                                              </button>
                                            </form>

                                          </td>
                                        </tr>


                                        <% }) %>
                                    </tbody>
                                  </table>
                                </div>
                                <% }else{ %>
                                  <div class="table-responsive">
                                    <table class="table table-striped text-center">
                                      <tbody>
                                        <tr>
                                          <td colspan="5">
                                            <h2>No Product there</h2>
                                          </td>
                                        </tr>
                                      </tbody>
                                    </table>
                                  </div>
                                  <% } %>

                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </div>
    </div>
    </div>
    <!-- content-wrapper ends -->

    <%- include('../include/footer.ejs'); %>
      <!-- partial -->
      </div>
      <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
      </div>
      <!-- container-scroller -->


      <%- include('../include/end.ejs');%>