<%- include('../include/head.ejs') %>
  </head>

  <body>
    <div class="container-scroller">

      <%- include('../include/header.ejs');%>


        <div class="container-fluid page-body-wrapper">

          <%- include('../include/side-bar.ejs'); %>

            <!-- main -->
            <div class="main-panel">
              <div class="content-wrapper">
                <div class="row">

                  <div class="tab-content tab-content-basic">

                    <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview">

                      <div class="row">


                        <%if(orders.length>0){%>
                          <% orders.forEach(o=>{ %>
                            
                            <div class="col-lg-12  grid-margin stretch-card">

                              <div class="card">
                                <div class="table-responsive">
                                <div class="card-body d-flex" style="flex-direction: column;">
                                  
                                  <div class="d-flex"
                                    style="align-items:center;justify-content: space-between;flex-basis: 100%;">

                                    <p class="order-id">Order ID #<%= o._id %>
                                    </p>
                                    
                                  </div>

                                  <hr />
                                  <div class="d-flex" style="justify-content: space-between;">
                                    <div class="d-flex" style="flex-direction: column; justify-content: space-between;">
                                     <div>
                                      <% o.items.forEach(f=>{ %>

                                        <h5>
                                          <%= f.title %> <span style="font-size: 15px;">&times;</span>
                                            <%= f.quantity %>
                                        </h5>

                                        <% }) %>
                                      
                                     </div>
                                        <h5 style="font-weight: 800;"><%= o.user.name  %></h5>
                                    </div>

                                    <div class="d-flex" style="flex-direction: column; ">
                                      <h5>
                                       Name : <%= o.customer.name%>
                                      </h5>
                                      <h5>
                                       Mobile No : <%= o.customer.mobile_no%>
                                      </h5>
                                      <h5>
                                       Total Price : â‚¹ <%= o.totalPrice%> /-
                                       </h5>
                                    </div>
                                  </div>
                                </div>
                                </div>
                              </div>
                            </div>
                            <% }) %>
                              <% } else{ %>
                                <div class="col-lg-12  grid-margin stretch-card">

                                  <div class="card">
                                    <div class="card-body">
                                      <!-- <h2 class="text-center">No Orders Found..!</h2> -->
                                      <table class="table table-striped  text-center">
                                        <tr>
                                          <td>
                                            <h2>No Orders Found..!</h2>
                                          </td>
                                        </tr>
                                      </table>
                                    </div>
                                  </div>
                                </div>
                                
                                <% } %>


                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </div>
    </div>
    </div>
    <!-- content-wrapper ends -->

    <%- include('../include/footer.ejs'); %>
      <!-- partial -->
      </div>
      <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
      </div>
      <!-- container-scroller -->


      <%- include('../include/end.ejs');%>