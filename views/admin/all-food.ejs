<%- include('../include/head.ejs') %>
  </head>

  <body>
    <% if(addmessage){ %>

      <div class="flash">
        <div class="flash__icon">
          <i class="icon mdi mdi-check-circle-outline"></i>
        </div>
        <p class="flash__body">
          <%= addmessage %>
        </p>
      </div>

      <% } %>
        <% if(editmessage){ %>

          <div class="flash">
            <div class="flash__icon">
              <i class="icon mdi mdi-check-circle-outline"></i>
            </div>
            <p class="flash__body">
              <%= editmessage %>
            </p>
          </div>

          <% } %>
            <% if(deletemessage){ %>

              <div class="flash">
                <div class="flash__icon">
                  <i class="icon mdi mdi-check-circle-outline"></i>
                </div>
                <p class="flash__body">
                  <%= deletemessage %>
                </p>
              </div>

              <% } %>
                <div class="container-scroller">

                  <%- include('../include/header.ejs');%>


                    <div class="container-fluid page-body-wrapper">

                      <%- include('../include/side-bar.ejs'); %>

                        <!-- main -->
                        <div class="main-panel">
                          <div class="content-wrapper">
                            <div class="row">

                              <div class="tab-content tab-content-basic">
                                <div class="tab-pane fade show active" id="overview" role="tabpanel"
                                  aria-labelledby="overview">
                                  <div class="row">
                                    <div class="col-lg-12 grid-margin stretch-card">
                                      <div class="card">
                                        <div class="card-body">
                                          <div class="table-responsive">
                                            <% if(foods.length> 0){ %>
                                              <table class="table  text-center">
                                                <thead>
                                                  <tr>
                                                    <th style="width: 30%;">
                                                      Title
                                                    </th>

                                                    <th style="width: 15%;">
                                                      Price
                                                    </th>
                                                    <th style="width: 30%;">
                                                      Description
                                                    </th>
                                                    <th style="width: 15%;">
                                                      Action
                                                    </th>
                                                  </tr>
                                                </thead>
                                                <tbody style="background-color:#F4F5F7">
                                                  <% foods.forEach(food=>{%>

                                                    <tr>
                                                      <td class="py-1">
                                                        <%= food.title %>
                                                      </td>

                                                      <td>
                                                        <%= food.price %>
                                                      </td>
                                                      <td>
                                                        <div class="desc" data-toggle="tooltip" data-placement="bottom"
                                                          title="<%= food.description %>">
                                                          <%= food.description %>
                                                        </div>
                                                      </td>
                                                      <td>
                                                        <a href="/admin/edit-food/<%= food._id %>?editing=true"
                                                          style="display: inline-block;">
                                                          <button type="button" class="btn btn-warning">
                                                            <div class="d-flex align-items-center">
                                                              <i class="mdi mdi-lead-pencil menu-icon"></i>
                                                            </div>
                                                          </button>
                                                        </a>
                                                        <form action="/admin/delete-food/<%= food._id %>"
                                                          style="display: inline-block;" method="post">
                                                          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

                                                          <button type="submit" class="btn btn-danger">
                                                            <div class="d-flex align-items-center">
                                                              <i class="mdi mdi-delete menu-icon"></i>
                                                            </div>
                                                          </button>
                                                        </form>
                                                      </td>
                                                    </tr>


                                                    <% }) %>
                                                </tbody>
                                              </table>

                                              <% }else{ %>
                                                <table class="table table-striped text-center">
                                                  <tr>
                                                    <td>
                                                      <h2>No Product there</h2>
                                                    </td>
                                                  </tr>
                                                </table>
                                                <% } %>

                                          </div>
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                    </div>
                </div>
                </div>
                <!-- content-wrapper ends -->

                <%- include('../include/footer.ejs'); %>
                  <!-- partial -->
                  </div>
                  <!-- main-panel ends -->
                  </div>
                  <!-- page-body-wrapper ends -->
                  </div>
                  <!-- container-scroller -->


                  <%- include('../include/end.ejs');%>